# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Database connection string (required)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=

# API source key (optional - CoinPaprika/CoinGecko don't require keys for basic usage)
API_SOURCE_KEY=

# Path to CSV file (optional, defaults to data/sample.csv)
CSV_PATH=/data/sample.csv

# Logging level (optional, defaults to INFO)
LOG_LEVEL=INFO

# Scheduler token for /trigger-etl endpoint authentication (optional)
# Generate a secure random token: python -c "import secrets; print(secrets.token_urlsafe(32))"
SCHEDULER_TOKEN=
